body {
    font-family: 'Open Sans', sans-serif;
    position: relative;
    cursor: default;
}

.background-credits {
    position: absolute;
    color: white !important;
    text-shadow: 0 0 2px black;
    font-size: 14px;
    bottom: 15px;
    right: 15px;
    font-style: italic;
}

.background-credits a {
    color: white;
}

.navbar {
    background-color: #11252c;
}

.header {
    position: relative;
    /*height: 650px;*/
    /*background-image: url('<%= image_path 'backgrounds/header-background.jpg' %>') !important;*/
    background-image: url('<%= image_path 'backgrounds/christmas.jpg' %>') !important;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
}

.santa-animation {
    transition: all 250ms;
}

.santa-animation:hover {
    transform: rotate(-5deg) scale(1.1);
}

.header-title {
    font-size: 28px;
    font-weight: bold;
    color: white;
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.8), 0 0 2px rgba(0, 0, 0, 0.8);
}

.header-box {
    display: block;
    text-decoration: none !important;
    padding: 50px;
    padding-left: 200px;
    margin: 30px 0;
    background-image: url('<%= image_path 'backgrounds/gift.jpg' %>');
    background-size: cover;
    border-left: 5px solid #d41f26;
    transition: all 250ms;
}

.header-box:hover {
    transform: scale(1.05);
}

.header-how-button,
.header-how-button:hover,
.header-how-button:not(:disabled):not(.disabled):active {
    border-width: 2px;
    background-color: transparent;
    border-color: rgba(255, 255, 255, 0.5);
    font-weight: bold;
}

.access-dashboard-button,
.access-dashboard-button:hover,
.access-dashboard-button:not(:disabled):not(.disabled):active {
    background-color: #ff6c3b;
    border-color: #ff6c3b;
    font-weight: bold;
}

.header-content {
    font-size: 24px;
    color: white;
}

.section {
    padding-top: 140px;
    padding-bottom: 150px;
    background-color: #fffcfa;
    background-size: cover;
    background-position: right;
}

.title {
    border-bottom: 5px solid #fe645c;
    margin-bottom: 10px;
    display: inline-block;
}

.section.why-us {
    background-image: url('<%= image_path 'backgrounds/why-us-background.jpg' %>');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    text-shadow: 0 0 1px black;
}

.section.get-in-touch {
    background-image: url('<%= image_path 'backgrounds/get-in-touch-background.jpg' %>');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    background-position: center center;
    text-shadow: 0 0 1px black;
}

.circular-icon-container {
    border-radius: 100%;
    padding: 68px;
    width: 200px;
    margin: 0 auto;
}

.what-do-we-do-icon {
    background-color: #dcf9ff;
}

.black-mountain-icon {
    background-color: white;
}

.btn-nav-outline {
    color: rgb(255, 255, 255);
    border: 1px solid transparent;
    padding-left: 5px;
    padding-right: 5px;
    margin-right: 8px;
    transition: border-color ease-in 150ms;
    font-size: 14px;
}

.btn-nav-outline.active,
.btn-nav-outline:hover {
    font-weight: bold;
    color: rgb(255, 255, 255);
    border-bottom-color: #fe645c;
}

.zoom-animation {
    transition: all ease-in 125ms;
}

.zoom-animation:hover {
    transform: scale(1.03);
}

.field_with_errors > .form-control {
    border: 1px solid #f65b81;
}

.btn-orange,
.btn-orange:hover {
    background-color: #ff6c3b;
    border-color: #ff6c3b;
    color: white;
}

.btn-orange:hover {
    font-weight: bold;
}

.already-working-with-us {
    background: linear-gradient(45deg, #319a6e, #aad4ff);
    color: white;
}

.already-working-with-us a {
    color: #c3ffc3 !important;
}