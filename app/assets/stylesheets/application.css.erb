body {
    font-family: 'Open Sans', sans-serif;
    position: relative;
    cursor: default;
    background-color: #fff7fc;
}

.navbar {
    background-color: #11252c;
}

.abstract-background {
    width: 100%;
    height: 100%;
    overflow: hidden;
    transform: skewY(-5deg);
    transform-origin: 0;
    background: linear-gradient(150deg,#ff5b00 15%,#ffc905 70%,#fff8a6 94%);
    position: absolute;
}

.header {
    position: relative;
    overflow: hidden;
}

.header-content {
    position: relative;
    padding-top: 150px;
    padding-bottom: 150px;
    font-size: 24px;
    color: white;
}

.header-vector {
    width: 600px;
    height: 600px;
    position: absolute;
    right: -150px;
    top: -40px;
    background-image: url('<%= image_path 'icons/header-vector.png' %>');
    background-repeat: no-repeat;
    background-position: top center;
    background-size: contain;
}

@media (max-width: 1190px) {
    .header-vector {
        display: none;
    }
}

.header-content h1 {
    font-size: 64px;
    font-family: 'Patua One', cursive;
    line-height: 55px;
}

@media (max-width: 390px) {
    .header-content h1 {
        font-size: 48px;
    }
}

.section.what-do-we-do {
    padding-top: 150px;
    padding-bottom: 50px;
}

.section.how {
    padding-top: 100px;
    padding-bottom: 50px;
}

.title {
    border-bottom: 5px solid #fe645c;
    margin-bottom: 10px;
    display: inline-block;
}

.section.why-us {
    background-image: url('<%= image_path 'backgrounds/why-us-background.jpg' %>');
    background-repeat: no-repeat;
    text-shadow: 0 0 1px black, 0 0 1px black, 0 0 1px black;
    padding: 100px;
    border-top: 10px solid #ff6c3b;
    font-size: 28px;
}

@media (max-width: 500px) {
    .section.why-us {
        padding: 50px;
        font-size: 24px;
    }
}

.section.get-in-touch {
    font-size: 14px;
    border-top: 1px solid #d2d8e2;
    background: #fff;
    margin-bottom: 0;
    padding-top: 80px;
    padding-bottom: 50px;
}

.section.get-in-touch i {
    margin-right: 10px;
    color: #d2d8e2;
}

.section.get-in-touch a {
    color: #112e54;
}

.what-do-we-do-icon {
    background-color: #dcf9ff;
}

.btn-nav-outline {
    color: rgb(255, 255, 255);
    border: 1px solid transparent;
    padding-left: 5px;
    padding-right: 5px;
    margin-right: 8px;
    transition: border-color ease-in 150ms;
    font-size: 14px;
}

.btn-nav-outline.active,
.btn-nav-outline:hover {
    font-weight: bold;
    color: rgb(255, 255, 255);
    border-bottom-color: #fe645c;
}

.zoom-animation {
    transition: all ease-in 125ms;
}

.zoom-animation:hover {
    transform: scale(1.03);
}

.field_with_errors > .form-control {
    border: 1px solid #f65b81;
}

.btn-orange,
.btn-orange:hover {
    background-color: #ff6c3b;
    border-color: #ff6c3b;
    color: white;
}

.credits {
    color: #d2d8e2;
    font-size: 11px;
    padding: 5px;
    border-radius: 5px;
    margin-top: 50px;
}

.credits a {
    color: #bcbdc3 !important;
}

.section.contact-us {
    position: relative;
    
}

.section.contact-us .container {
    padding-top: 100px;
    padding-bottom: 100px;
}

.section.contact-us .abstract-background {
    background: linear-gradient(150deg,#dbddf1 15%,#f3dfec 70%,#f5edfb 94%);
    transform: none;
}