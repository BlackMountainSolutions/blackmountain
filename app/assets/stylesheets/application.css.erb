body {
    font-family: 'Open Sans', sans-serif;
    position: relative;
    cursor: default;
}

.navbar {
    background-color: #11252c;
}

.header {
    height: 650px;
    background-image: url('<%= image_path 'backgrounds/header-background.jpg' %>') !important;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
}

.header-title {
    font-size: 42px;
    font-weight: bold;
    color: white;
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.8);
}

.header-how-button,
.header-how-button:hover,
.header-how-button:not(:disabled):not(.disabled):active {
    border-width: 1px;
    background-color: transparent;
    border-color: rgba(255, 255, 255, 0.5);
    font-size: 12px;
    text-transform: uppercase;
    font-weight: bold;
}

.header-content {
    font-size: 24px;
    color: white;
}

.section {
    padding-top: 140px;
    padding-bottom: 150px;
    background-color: #fffcfa;
    background-image: url('<%= image_path 'backgrounds/trianglify-background-2.png' %>');
    background-size: cover;
    background-position: right;
}

.title {
    border-bottom: 5px solid #fe645c;
    margin-bottom: 10px;
    display: inline-block;
}

.section.why-us {
    background-image: url('<%= image_path 'backgrounds/why-us-background.jpg' %>');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    text-shadow: 0 0 1px black;
}

.section.get-in-touch {
    background-image: url('<%= image_path 'backgrounds/get-in-touch-background.jpg' %>');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    background-position: center center;
    text-shadow: 0 0 1px black;
}

.circular-icon-container {
    border-radius: 100%;
    padding: 68px;
    width: 200px;
    margin: 0 auto;
}

.what-do-we-do-icon {
    background-color: #dcf9ff;
}

.black-mountain-icon {
    background-color: white;
}

.btn-nav-outline {
    color: rgb(255, 255, 255);
    border: 1px solid transparent;
    padding-left: 5px;
    padding-right: 5px;
    margin-right: 8px;
    transition: border-color ease-in 150ms;
    font-size: 14px;
}

.btn-nav-outline.active,
.btn-nav-outline:hover {
    font-weight: bold;
    color: rgb(255, 255, 255);
    border-bottom-color: #fe645c;
}

.zoom-animation {
    transition: all ease-in 125ms;
}

.zoom-animation:hover {
    transform: scale(1.03);
}

.field_with_errors > .form-control {
    border: 1px solid #f65b81;
}