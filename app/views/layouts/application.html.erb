<!doctype html>
<html lang="en" itemscope="" itemtype="http://schema.org/WebPage">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">

        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

        <link rel="shortcut icon" href="./favicon.ico">
        <link rel="icon" href="./favicon.ico" type="image/x-icon">

        <title>BlackMountain - Building high quality software</title>
        <meta name="description" content="Helping clients by doing what we love, building high quality software.">
        <meta content="./assets/images/logo.png" itemprop="image">
    </head>
    <body data-spy="scroll" data-target="#navbar" data-offset="100">
        <nav id="navbar" class="navbar sticky-top shadow">
            <div class="container">
                <a class="navbar-brand mx-auto" href="#">
                    <%= image_tag "logo-alt.svg", height: "18" %>
                </a>
                <div class="d-none mx-auto d-sm-block">
                    <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <%= link_to "Our services", welcome_index_path(anchor: "what-do-we-do"), class: "nav-link btn-nav-outline" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Why us?", welcome_index_path(anchor: "why-us"), class: "nav-link btn-nav-outline" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "How?", welcome_index_path(anchor: "how"), class: "nav-link btn-nav-outline" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Get in touch", welcome_index_path(anchor: "get-in-touch"), class: "nav-link btn-nav-outline" %>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <%= yield %>
        <section class="section get-in-touch" id="get-in-touch">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-6 mb-5 text-white">
                        <h1><strong class="title">Get in touch</strong></h1>
                        <ul class="list-unstyled mt-4">
                            <li class="media rounded zoom-animation">
                                <a href="mailto:contact@black-mountain.com.ar" class="btn btn-block py-4 d-flex text-left align-items-center">
                                    <%= image_tag "icons/icon-gmail-64.png", class: "mr-4" %>
                                    <div class="media-body">
                                        <h5 class="text-white"><strong>Email</strong></h5>
                                        <p class="text-white">Drop us a line, we would love to hear from you!</p>
                                    </div>
                                </a>
                            </li>
                            <li class="media rounded zoom-animation">
                                <a href="https://www.linkedin.com/company/blackmountain-solutions" target="_blank" rel="no-follow" class="btn btn-block py-4 d-flex text-left align-items-center">
                                    <%= image_tag "icons/icon-linkedin-64.png", class: "mr-4" %>
                                    <div class="media-body">
                                        <h5 class="text-white"><strong>LinkedIn</strong></h5>
                                        <p class="text-white">Follow us on LinkedIn</p>
                                    </div>
                                </a>
                            </li>
                            <li class="media rounded zoom-animation">
                                <a href="https://github.com/BlackMountainSolutions" target="_blank" rel="no-follow" class="btn btn-block py-4 d-flex text-left align-items-center">
                                    <%= image_tag "icons/icon-github-64.png", class: "mr-4" %>
                                    <div class="media-body">
                                        <h5 class="text-white"><strong>GitHub</strong></h5>
                                        <p class="text-white">Check out our open source organization</p>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <iframe
                            class="shadow"
                            width="100%"
                            height="500"
                            src="https://maps.google.com/maps?width=100%&height=600&hl=es&q=avenida%20peron%201750%20yerba%20buena+(BlackMountain)&ie=UTF8&t=&z=16&iwloc=B&output=embed"
                            frameborder="0"
                            scrolling="no"
                            marginheight="0"
                            marginwidth="0"
                        ></iframe>
                    </div>
                </div>
            </div>
        </section>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
