<%= form_with(model: contact, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "shadow-sm form-control rounded-pill control-lg form-control-lg border-0 p-4 text-center" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "shadow-sm form-control rounded-pill control-lg form-control-lg border-0 p-4 text-center" %>
  </div>

  <div class="form-group text-center">
    <%= form.submit "Contact", class: buttonCss %>
  </div>
<% end %>
