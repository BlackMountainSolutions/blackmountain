<%= form_with(model: contact, local: true) do |form| %>
  <div class="form-group text-left">
    <%= form.label :name, class: "ml-3" %>
    <%= form.text_field :name, class: "shadow-sm form-control rounded control-lg form-control-lg border-0 p-4" %>
  </div>

  <div class="form-group text-left">
    <%= form.label :email, class: "ml-3" %>
    <%= form.email_field :email, class: "shadow-sm form-control rounded control-lg form-control-lg border-0 p-4" %>
  </div>

  <div class="form-group text-center">
    <%= form.submit "Contact", class: buttonCss %>
  </div>
<% end %>
